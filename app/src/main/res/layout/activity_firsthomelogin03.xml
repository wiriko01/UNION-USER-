<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".firsthomelogin03">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/TextViewhome031"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data yang diisi akan membantu kami dalam
        memberikan vendor dan rekomendasi yang lebih baik dengan
        memberitahu sedikit tentang kamu dan rencana pernikahan kamu"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/TextViewhome032"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kapan kita menikah" />

        <EditText
            android:id="@+id/edittexthome031"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Tahun"/>


        <EditText
            android:id="@+id/edittexthome032"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Bulan, Tanggal"
            android:layout_toRightOf="@id/edittexthome021"/>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kita masih belum memutuskannya" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="40dp"
            android:layout_marginTop="210dp"
            android:layout_height="40dp"
            android:background="@drawable/secure"/>

        <TextView
            android:id="@+id/TextViewhome034"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jangan Khawatir, kamu akan dapat mengupdate
                kembali data ini lagi!"
            android:paddingLeft="50dp"
            android:layout_marginTop="210dp"/>
        <Button
            android:id="@+id/Btnhome033"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:text="Lanjut"
            android:textColor="@color/white"
            android:background="@color/maincolor"
            android:onClick="firsthomelogin3kefirsthomelogin4"/>
    </RelativeLayout>
</LinearLayout>
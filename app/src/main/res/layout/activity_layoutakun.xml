<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layoutakun">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewakun1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNION"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginRight="220dp"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/little_scanner"
            android:layout_toRightOf="@+id/textViewakun1"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/settings"
            android:layout_toRightOf="@+id/imageView1"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/grey"
        />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/profil1_foreground"
        android:layout_marginTop="-110dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pengguna"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ide"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Komentar"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Vendor favorit"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Cerita saya"
        android:textAlignment="viewStart"
        android:paddingLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:background="@color/maincolor"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/grey"
        android:orientation="vertical">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Belum ada ide
              Mulai mencari ide untuk
        rencana pernikahan anda"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/maincolor"
            android:text="Cari Ide"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:menu="@menu/bottom_app_bar"
            app:itemTextColor="#000000"
            android:background="@color/white"
            app:itemIconSize="25dp" />
    </LinearLayout>

</LinearLayout>
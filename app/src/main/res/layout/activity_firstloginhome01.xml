<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".firstloginhome01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/TextViewhome021"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data yang diisi akan membantu kami dalam
        memberikan vendor dan rekomendasi yang lebih baik dengan
        memberitahu sedikit tentang kamu dan rencana pernikahan kamu"
            android:textSize="14dp"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/TextViewhome022"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Namaku pasanganku adalah" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittexthome021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:textSize="15dp"
                android:hint="Nama depan"/>
            <EditText
                android:id="@+id/edittexthome022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:textSize="15dp"
                android:hint="Nama Belakang"
                android:layout_toRightOf="@id/edittexthome021"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="40dp"
            android:layout_marginTop="290dp"
            android:layout_height="40dp"
            android:background="@drawable/secure"/>

        <TextView
            android:id="@+id/TextViewhome024"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jangan Khawatir, kamu akan dapat mengupdate
                kembali data ini lagi!"
            android:paddingLeft="50dp"
            android:layout_marginTop="290dp"/>
        <Button
            android:id="@+id/Btnhome023"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:text="Lanjut"
            android:textColor="@color/white"
            android:background="@color/maincolor"
            android:onClick="firsthomelogin1kefirsthomelogin2"/>
    </RelativeLayout>
</LinearLayout>
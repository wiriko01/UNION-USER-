<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layoutvendor">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/ImageViewToko1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_search_icon"
            tools:ignore="VectorDrawableCompat"
            android:padding="5dp"
            android:layout_marginRight="260dp" />
        <ImageView
            android:id="@+id/ImageViewToko2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_box"
            tools:ignore="VectorDrawableCompat"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/ImageViewToko1" />
        <ImageView
            android:id="@+id/ImageViewToko3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_notif"
            tools:ignore="VectorDrawableCompat"
            android:padding="5dp"
            android:layout_marginRight="300dp"
            android:layout_toRightOf="@+id/ImageViewToko2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TextViewVendor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih vendor berdasarkan"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/ButtonVendor1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/borderbuttongrey"
            android:text="Semua Kategori"
            android:layout_gravity="start"
            android:textColor="#666666"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/ButtonVendor2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/borderbuttongrey"
            android:text="Kota (Medan)"
            android:layout_gravity="start"
            android:textColor="#666666"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/ButtonVendor3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/borderbuttongrey"
            android:text="Budget"
            android:layout_gravity="start"
            android:textColor="#666666"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/ButtonVendor4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/borderbuttongrey"
            android:text="Tampilkan hanya yang dapat menjadwalkan ulang"
            android:layout_gravity="start"
            android:textSize="12dp"
            android:textColor="#666666"
            android:textAlignment="textStart"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/ButtonVendor5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maincolor"
            android:text="Cari Vendor"
            android:textColor="@color/white"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/TextViewVendor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="Cari berdasarkan kategori"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/ImageViewVendor1"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@color/grey"
            android:layout_below="@id/TextViewVendor2"/>
        <ImageView
            android:id="@+id/ImageViewVendor2"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@color/grey"
            android:layout_below="@id/TextViewVendor2"
            android:layout_toRightOf="@id/ImageViewVendor1"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu="@menu/bottom_app_bar"
        app:itemTextColor="#000000"
        android:background="@color/white"
        app:itemIconSize="25dp" />
</LinearLayout>